<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chat Room</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Custom Chat CSS -->
  <link rel="stylesheet" href="/css/chat.css">
</head>
<body>
  <h1 class="text-center mb-4">Welcome to the Book Lovers' Chat Room</h1>

  <!-- Display the current username -->
  <div class="text-center">
    <p id="current-name-display">You are chatting as: <strong>{{user_name}}</strong></p>
  </div>

  <!-- Hidden element to store username -->
  <input type="hidden" id="username" value="{{user_name}}">

  <div class="chat-container d-flex">
    <!-- Chat Box -->
    <div id="message-box" class="flex-grow-1 me-3">
      <!-- Messages will be dynamically inserted here -->
      {{#each messages}}
      <div class="message">
        <strong class="username">{{this.username}}</strong>: {{this.message}}
        <small class="time">{{this.time}}</small>
      </div>
      {{/each}}
    </div>

    <!-- Book Suggestions Sidebar -->
    <div class="suggestion-box">
      <h4>Book Suggestions</h4>
      {{#each bookSuggestions}}
      <div class="book-suggestion d-flex align-items-center mb-3">
        <img src="{{this.image}}" alt="{{this.title}} cover" class="book-image me-2">
        <div>
          <p class="book-title mb-0">{{this.title}}</p>
          <p class="book-author">by {{this.author}}</p>
        </div>
      </div>
      {{/each}}
    </div>
  </div>

  <!-- Chat Input Section -->
  <div class="chat-input-container mt-3">
    <form id="chat-form" class="d-flex">
      <input type="text" id="message" class="form-control me-2" placeholder="Type your message...">
      <input type="color" id="color-picker" class="form-control color-picker me-2" value="#007BFF">
      <button id="send-message" class="btn btn-primary">Send</button>
    </form>
  </div>

  <!-- Footer -->
  <footer class="text-center mt-4">
    <p>&copy; 2024 The Book Heaven. Created by Tai, John, Nancy, Bitsiet, and Stacy.</p>
  </footer>

  <!-- jQuery and Socket.io -->
  <script src="/socket.io/socket.io.js"></script>
  <script src="/js/chat.js"></script>
</body>
</html>
