<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Profile</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Link to custom profile CSS -->
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>
  <!-- Profile Header Section -->
  <section class="profile-header">
    <div class="profile-banner">
      <img src="/images/profile-banner.jpg" alt="Profile Banner" class="banner-image">
      <div class="avatar-container">
        <img src="/images/book2.jpg" alt="{{user.name}}'s Avatar" class="avatar">
        <h1 class="mt-3 profile-name">{{user.name}}</h1>
        <p class="lead">Book Lover & Explorer of {{user.favorite_genre}}</p>
        <button class="btn btn-outline-light btn-edit-profile">Edit Profile</button>
      </div>
    </div>
  </section>

  <!-- Profile Stats Section -->
  <section class="container profile-stats text-center">
    <div class="row">
      <div class="col-md-3">
        <div class="stat-box">
          <h3>{{user.booksRead}}</h3>
          <p>Books Read</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-box">
          <h3>{{user.topReviews}}</h3>
          <p>Top Reviews</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-box">
          <h3>{{user.genresExplored}}</h3>
          <p>Genres Explored</p>
        </div>
      </div>
      <div class="col-md-3">
        <div class="stat-box">
          <h3>{{user.wishlistBooks}}</h3>
          <p>Books on Wishlist</p>
        </div>
      </div>
    </div>
  </section>

  <!-- User Activity Section -->
  <section class="container mt-5 user-activity">
    <h2 class="section-title">Recent Activity</h2>
    <div class="activity-list">
      {{#each recentActivities}}
      <div class="activity-item">
        <div class="activity-icon">
          <i class="fas fa-book"></i>
        </div>
        <div class="activity-content">
          <p>{{this.activityText}}</p>
          <small>{{this.timestamp}}</small>
        </div>
      </div>
      {{/each}}
    </div>
  </section>

  <!-- Book Shelves Section -->
  <section class="container mt-5">
    <h2 class="section-title">Your Bookshelves</h2>
    <div class="row">
      <div class="col-md-4">
        <h4>Currently Reading</h4>
        <ul class="book-shelf">
          {{#each currentlyReading}}
          <li>{{this.title}} by {{this.author}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4">
        <h4>Finished Books</h4>
        <ul class="book-shelf">
          {{#each finishedBooks}}
          <li>{{this.title}} by {{this.author}}</li>
          {{/each}}
        </ul>
      </div>
      <div class="col-md-4">
        <h4>Wishlist</h4>
        <ul class="book-shelf">
          {{#each wishlistBooks}}
          <li>{{this.title}} by {{this.author}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </section>

  <!-- Achievements/Badges Section -->
  <section class="container mt-5 text-center">
    <h2 class="section-title">Achievements</h2>
    <div class="achievement-badges">
      {{#each userAchievements}}
      <div class="badge">
        <img src="/images/badges/{{this.image}}" alt="{{this.title}}">
        <p>{{this.title}}</p>
      </div>
      {{/each}}
    </div>
  </section>

  <!-- Footer -->
  <footer class="mt-5 text-center">
    <p>&copy; 2024 The Book Heaven. Created by Tai, John, Nancy, Bitsiet, and Stacy. .</p>
  </footer>

</body>
</html>
